      "type": "date",
      "required": true
    },
    "Body": {
      "type": "richtext",
      "required": true
    },
    "Image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "Read_Time": {
      "required": true,
      "type": "decimal"
    }
  }
}
